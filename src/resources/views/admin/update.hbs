<div class="mt-4">
  <h3>Update article</h3>
  <form method="POST" action="/admin/articles/{{ article._id }}?_method=PUT">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" name="name" value="{{ article.name }}">
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea type="text" class="form-control" id="description" name="description">
        {{ article.description }}
      </textarea>
    </div>
    <div class="form-group">
      <label for="image">Image</label>
      <input type="text" class="form-control" id="image" name="image" value="{{ article.image }}">
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
  </form>
</div>